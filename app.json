{
  "expo": {
    "name": "Hey 晋さん",
    "slug": "hei-shin-san",
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/logo-sm.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "enabled": true,
      "fallbackToCacheTimeout": 10000
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "net.votepurchase.heyshinsan",
      "buildNumber": "1.0.1",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Use the photo library to change your avatar.",
        "NSMicrophoneUsageDescription": "このアプリは音声認識のためにマイクを使用します",
        "NSSpeechRecognitionUsageDescription": "このアプリはAIからの応答を作成するために音声認識を使用します"
      },
      "userInterfaceStyle": "automatic"
    },
    "android": {
      "package": "net.votepurchase.heyshinsan",
      "versionCode": 2,
      "userInterfaceStyle": "automatic",
      "permissions": [
        "VIBRATE",
        "CAMERA",
        "android.permission.RECORD_AUDIO",
        "RECORD_AUDIO",
        "com.google.android.googlequicksearchbox"
      ]
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "js",
        "jsx",
        "svg",
        "ts",
        "tsx"
      ]
    },
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "このアプリは音声認識のためにマイクを使用します",
          "speechRecogntionPermission": "このアプリはAIからの応答を作成するために音声認識を使用します"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "48f2affc-92a3-4f1a-954b-08d2fbcdc93a"
      }
    }
  }
}
